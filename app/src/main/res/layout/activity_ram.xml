<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.android.mobiwik.RAM"
    android:background="@drawable/nice">

    <TextView
        android:text="@string/ram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="20sp"
        android:textColor="#ff000202"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id ="@+id/radiogroup2_layout"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 GB"
        android:id="@+id/ram1"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 GB"
        android:id="@+id/ram2"
        android:layout_below="@+id/ram1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3 GB"
        android:id="@+id/ram3"
        android:layout_below="@+id/ram2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp" />

    </RadioGroup>

     <Button
        android:id="@+id/button1"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:background="#00cccc"
        android:text="Next"
         android:layout_marginTop="54dp"
         android:layout_below="@+id/radiogroup2_layout"
         android:layout_toRightOf="@+id/button2"
         android:layout_toEndOf="@+id/button2"
         android:layout_marginLeft="42dp"
         android:layout_marginStart="42dp" />
    <Button
        android:id="@+id/button2"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:background="#00cccc"
        android:text="Prev"
        android:layout_alignTop="@+id/button1"
        android:layout_toRightOf="@+id/radiogroup2_layout"
        android:layout_toEndOf="@+id/radiogroup2_layout" />




</RelativeLayout>
