<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.mobiwik.DetailActivity"
    android:background="@drawable/b">

<com.parse.ParseImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/name"
        android:textColor="#80000000"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brand"
        android:id="@+id/usn"
        android:textSize="20sp"
        android:textColor="#80000000"
        android:textStyle="bold"
        android:layout_below="@+id/name"
        android:layout_alignLeft="@+id/semester"
        android:layout_alignStart="@+id/semester" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:id="@+id/semester"
        android:textSize="20sp"
        android:textColor="#80000000"
        android:textStyle="bold"
        android:layout_below="@+id/usn" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera"
        android:id="@+id/camera"
        android:textSize="20sp"
        android:textColor="#80000000"
        android:textStyle="bold"
        android:layout_below="@+id/semester"
        android:layout_alignLeft="@+id/semester"
        android:layout_alignStart="@+id/semester" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/product_name"
        android:layout_alignTop="@+id/name"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/product_brand"
        android:layout_below="@+id/name"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/product_price"
        android:layout_below="@+id/usn"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/product_camera"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true" />


</RelativeLayout>